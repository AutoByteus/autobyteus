    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: app grpc server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "args": [
                "--mode",
                "grpcserver"
            ]
        },
        {
            "name": "Python: app graphql",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "args": [
                "--mode",
                "graphqlserver",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
            ]
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "presentation": {
                "hidden": true, 
            }
        },
    ]
}